<h2>Login</h2>

<%= form_with url: login_path do %>
  <div>
    <label>Email</label><br>
    <%= email_field_tag :email %>
  </div>

  <div>
    <label>Password</label><br>
    <%= password_field_tag :password %>
  </div>

  <br>

  <%= submit_tag "Login" %>
<% end %>

<p>
  <%= link_to "Create account", signup_path %>
</p>
